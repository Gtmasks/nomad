{{#basic-dropdown
  onOpen=(action (mut isOpen) true)
  onClose=(action (mut isOpen) false)
  as |dd|}}
  {{#dd.trigger class="dropdown-trigger" onKeyDown=(action "openOnArrowDown")}}
    <span class="dropdown-trigger-label">
      {{label}}
      {{#if selection.length}}
        <span class="tag is-light">{{selection.length}}</span>
      {{/if}}
    </span>
    <span class="dropdown-trigger-icon ember-power-select-status-icon"></span>
  {{/dd.trigger}}
  {{#dd.content class="dropdown-options"}}
    <ul role="listbox">
      {{#each options key="key" as |option|}}
        <li class="dropdown-option" tabindex="1" onkeydown={{action "traverseList" option}}>
          <label>
            <input
              type="checkbox"
              tabindex="-1"
              checked={{includes option.key selection}}
              onchange={{action "toggle" option}} />
            {{option.label}}
          </label>
        </li>
      {{/each}}
    </ul>
  {{/dd.content}}
{{/basic-dropdown}}